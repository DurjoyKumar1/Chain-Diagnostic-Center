<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cdc.pharmacist.CreateMedicineController">
   <top>
      <!-- Include menu.fxml here -->
      <fx:include source="menu.fxml" />
   </top>
   <center>
      <AnchorPane prefHeight="500.0" prefWidth="700.0">
         <children>
            <BorderPane prefHeight="500.0" prefWidth="700.0">
               <top>
                  <Text fill="#021ffc" stroke="#1bd057" strokeType="OUTSIDE" text="Create Medicine" textAlignment="CENTER" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <BorderPane.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </BorderPane.margin>
                  </Text>
               </top>
               <center>
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <TextField prefHeight="40.0" prefWidth="680.0" promptText="Medicine Name">
                        <VBox.margin>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                     </TextField>
                     <ComboBox prefHeight="40.0" prefWidth="688.0" promptText="Select Supplier">
                        <VBox.margin>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                     </ComboBox>
                     <TextField prefHeight="40.0" prefWidth="680.0" promptText="Quantity">
                        <VBox.margin>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                     </TextField>
                     <TextField prefHeight="40.0" prefWidth="680.0" promptText="Price">
                        <VBox.margin>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                     </TextField>
                     <TextArea prefHeight="100.0" prefWidth="680.0" promptText="Optional Note">
                        <VBox.margin>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                     </TextArea>
                     <Button prefHeight="37.0" prefWidth="680.0" text="Submit">
                        <padding>
                           <Insets bottom="10.0" left="315.0" right="315.0" top="10.0" />
                        </padding>
                     </Button>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
